<body>
    {{>header}}
    <div class="container mt-5">
    <h3>Edit your details</h3>
    <form action="/updateuser/{{data._id}}" method="post" >
    {{#if succs}}
    <div class="alert alert-info">{{succs}}</div>
    {{/if}}
    
    {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
    {{/if}}

            <div class="mt-3">
            <input type="name" id="name" name="name" placeholder="Your Name" value="{{data.name}}" />
             {{#if nameErr}}
                <p class="text-danger">{{nameErr}}</p>
                {{/if}}
            </div>

            <div class="mt-3">
            <input type="email" id="email" name="email" placeholder="Email Address" value="{{data.email}}"/>
            {{#if emailErr}}
                <p class="text-danger">{{emailErr}}</p>
            {{/if}}
            </div>
            <div class="mt-3">
            <input type="number" id="mobile" name="mobile" placeholder="mobile number" value="{{data.mobile}}"/>
            {{#if phoneErr}}
            <p class="text-danger">{{phoneErr}}</p>
            {{/if}}
            </div> 

            <div class="mt-3">
            <input type="text" id="address" name="address" placeholder="Your address" value="{{data.address}}"/>
             {{#if addErr}}
                <p class="text-danger">{{addErr}}</p>
                {{/if}}
            </div>

            <div class="mt-3">
            <input type="submit" value="submit">
            </div>
        </form>
